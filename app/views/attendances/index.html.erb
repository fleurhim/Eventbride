    <div class="container">
      <br><br>
      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">Liste des participants</h6>
        
        <% if !@attendances.nil? %>

          <% @attendances.each do |attendance|%>
          <div class="media text-muted pt-3">
            <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="text-gray-dark"><%= attendance.user.first_name + " " + attendance.user.last_name %></strong>
              </div>
              <span class="d-block">Inscription le <%=attendance.created_at.strftime("%F")%> à <%=attendance.created_at.strftime("%HH%M")%></span>
            </div>
          </div>
          <%end%>

        <% else %>

          <div class="media text-muted pt-3">
            <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="text-gray-dark">Vous n'avez pas encore de participant</strong>
              </div>
            </div>
          </div>

        <%end%>
        <br><br>

      <div class="row">
        <div class="col-md-3">
          <%=link_to "Éditer l'évènement", edit_event_path(params[:event_id]), class: "btn btn-md btn-primary"%>
        </div>
      </div>
    </div>