<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
        <h1 class="h3 mb-3 font-weight-normal text-center">Check Out</h1>

        <div class="card-body">
          <h1 class="card-title pricing-card-title"> <%= @event.title %></h1>
          <ul class="list-unstyled mt-3 mb-4">
                <hr>
                <li>Location: <%= @event.location %> </li>
                <hr>
                <li>Start Date: <%= @event.start_date %> </li>
                <hr>
              </ul>
        </div>
          <%= form_tag event_attendances_path(@event.id) do %>
            <article>
              <% if flash[:error].present? %>
                <div id="error_explanation">
                  <p><%= flash[:error] %></p>
                </div>
              <% end %>
              <label class="amount">
                <span><h4 class="card-title pricing-card-title">Amount to pay: <%= @event.price %>â‚¬ </h4></span>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="Payment of <% @user.first_name + @user.last_name%>"
                    data-amount="<%= @event.price*100 %>"
                    data-locale="auto"></script>
          <% end %>
    </div>
  </div>
</div>
</div>