<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <br><br><br>
      <h1 class="h3 mb-3 font-weight-normal text-center">Create your Event</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <div class="form-group">
          <%= label_tag :title, "Title"%><br/>
          <%= text_field_tag :title, "", placeholder: "Between 5 and 140 characters...", maxlength: 140, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :description, "Description"%><br/>
          <%= text_area_tag :description, "", placeholder: "Between 20 and 1000 characters...", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :location, "Location"%><br/>
          <%= text_field_tag :location, "", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :price, "Price"%><br/>
          <%= number_field_tag :price, "",placeholder: "Between 1â‚¬ and 1000â‚¬", max: 1000, min: 1, class: "form-control" %>
        </div>

       <div class="form-group">
          <%= label_tag :duration, "Duration (min)"%><br/>
          <%= number_field_tag :duration, "", min: 0, step: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :start_date, "Start Date"%><br/>
          <%= date_field_tag :start_date, Date.today, class: "form-control" %>
        </div>
        <div class="actions">
          <%= submit_tag "Create Event", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>