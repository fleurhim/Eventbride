<% flash.each do |msg| %>
  <div class="alert alert-warning">
    <%= msg[1] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <br><br><br>
      <h1 class="h3 mb-3 font-weight-normal text-center">Edit your Event</h1>
      <%= form_tag url_for(action: 'update'), multipart: true, method: "patch" do %>

        <div class="form-group">
          <%= label_tag :title, "Title"%><br/>
          <%= text_field_tag :title, @event.title, placeholder: "Between 5 and 140 characters...", maxlength: 140, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :description, "Description"%><br/>
          <%= text_area_tag :description, @event.description, placeholder: "Between 20 and 1000 characters...", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :location, "Location"%><br/>
          <%= text_field_tag :location, @event.location, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :price, "Price"%><br/>
          <%= number_field_tag :price, @event.price,placeholder: "Between 1€ and 1000€", max: 1000, min: 1, class: "form-control" %>
        </div>

       <div class="form-group">
          <%= label_tag :duration, "Duration (min)"%><br/>
          <%= number_field_tag :duration, @event.duration, min: 0, step: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :start_date, "Start Date"%><br/>
          <%= date_field_tag :start_date, Date.today, class: "form-control" %>
        </div>
        <hr>
        <div class="form-group">
        <%= label_tag :picture, "Ajouter un photo à l'évènement"%><br/>
        <%= file_field_tag :picture %>
        </div>
        <hr>
        <div class="actions">
          <%= submit_tag "Edit Event", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>